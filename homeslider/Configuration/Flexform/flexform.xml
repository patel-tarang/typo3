<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Home Slider</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.irre>
						<section>1</section>
						<type>array</type>
						<el>
							<settings.subSection>
								<type>array</type>
								<el>
									<title>
										<TCEforms>
											<label>Title</label>
											<config>
												<type>input</type>
												<size>30</size>
											</config>
										</TCEforms>
									</title>
									
									<bgimage>
										<TCEforms>
											<label>Image</label>
											<config>
												<type>group</type>
												<internal_type>file</internal_type>
												<allowed>gif,png,jpg,jpeg</allowed>
												<max_size>10240000</max_size>
												<uploadfolder>uploads/tx_slider/</uploadfolder>
												<show_thumbs>1</show_thumbs>
												<size>1</size>
												<maxitems>1</maxitems>
												<minitems>0</minitems>
											</config>
										</TCEforms>
									</bgimage>		
									<pages>
										<TCEforms>
										 <exclude>1</exclude>
										 <label>Page</label>
										 <config>
										  <type>group</type>
										  <internal_type>db</internal_type>
										  <allowed>pages</allowed>
										  <size>1</size>
										  <maxitems>1</maxitems>
										  <minitems>0</minitems>
										  <show_thumbs>1</show_thumbs>
										 </config>
										</TCEforms>
									   </pages>
								</el>
							</settings.subSection>
						</el>
					</settings.irre>
				</el>
			</ROOT>
		</sDEF>
		
	</sheets>
</T3DataStructure>