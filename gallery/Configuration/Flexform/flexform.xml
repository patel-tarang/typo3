<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Gallery</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.irre>
						<section>1</section>
						<type>array</type>
						<el>
							<settings.subSection>
								<type>array</type>
								<el>
									<albumtitle>
										<TCEforms>
											<label>AlbumTitle</label>
											<config>
												<type>input</type>
												<size>30</size>
											</config>
										</TCEforms>
									</albumtitle>
									<albumtext>
										<TCEforms>
											<label>AlbumText</label>
											<defaultExtras>richtext:rte_transform[flag=rte_enabled|mode=ts_css]</defaultExtras>
											<config>
												<type>text</type>
												<cols>25</cols>
												<rows>4</rows>
												<default></default>
											</config>
										</TCEforms>
									</albumtext>
									<thumbimage>
										<TCEforms>
											<label>AlbumImage</label>
											<config>
												<type>group</type>
												<internal_type>file</internal_type>
												<allowed>gif,png,jpg,jpeg</allowed>
												<max_size>10240000</max_size>
												<uploadfolder>uploads/tx_gallery/</uploadfolder>
												<show_thumbs>1</show_thumbs>
												<size>1</size>
												<maxitems>1</maxitems>
												<minitems>0</minitems>
											</config>
										</TCEforms>
									</thumbimage>		
									<irre>
										<section>1</section>
										<type>array</type>
										<el>
											<subSection>
												<type>array</type>
												<el>
													<title>
														<TCEforms>
															<label>Title</label>
															<config>
																<type>input</type>
																<size>30</size>
															</config>
														</TCEforms>
													</title>
													
													<image>
														<TCEforms>
															<label>Image</label>
															<config>
																<type>group</type>
																<internal_type>file</internal_type>
																<allowed>gif,png,jpg,jpeg</allowed>
																<max_size>10240000</max_size>
																<uploadfolder>uploads/tx_gallery/</uploadfolder>
																<show_thumbs>1</show_thumbs>
																<size>1</size>
																<maxitems>1</maxitems>
																<minitems>0</minitems>
															</config>
														</TCEforms>
													</image>
													
												</el>
											</subSection>
										</el>
									</irre>
								</el>
							</settings.subSection>
						</el>
					</settings.irre>
				</el>
			</ROOT>
		</sDEF>
		
	</sheets>
</T3DataStructure>